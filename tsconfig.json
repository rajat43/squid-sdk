{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "paths": {
    "~*": ["src"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "src/test/*",
    "src/scripts/*",
    "docs"
  ]
}
