{
  "compilerOptions": {  
    "target": "es2018",
    "module": "commonjs",
    "rootDir": "src",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": "./src"
  },  
  "include": [  
    "src/**/*.ts"  
  ],  
  "exclude": [  
    "node_modules"  
  ] 
}
